{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "composite": true, 
    "paths": {
      "@flowsplit/shared": ["../../shared/src"],
      "@flowsplit/shared/*": ["../../shared/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "references": [
    { "path": "../../shared" }
  ]
}