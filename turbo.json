{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [".env"],
    "globalDependencies": ["**/.env"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    }
}